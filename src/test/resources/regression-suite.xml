<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SwagLabs-Regression-Test-Suite" verbose="1" parallel="false" thread-count="1">

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <!-- Regression Test Suite - Cart Functionality and Checkout -->
    <test name="Regression-Tests-Cart-And-Checkout" preserve-order="true">
        <parameter name="testType" value="regression"/>
        <groups>
            <run>
                <include name="regression"/>
                <include name="cart"/>
                <include name="checkout"/>
                <include name="validation"/>
            </run>
        </groups>
        <classes>
            <!-- Comprehensive Cart Tests -->
            <class name="com.swaglabs.tests.CartTest">
                <methods>
                    <include name="testBasicCartOperations"/>
                    <include name="testMultipleProductsCartManagement"/>
                    <include name="testCartPersistenceAcrossNavigation"/>
                    <include name="testCartItemInformationValidation"/>
                    <include name="testCartCheckoutNavigation"/>
                    <include name="testCartEdgeCases"/>
                    <include name="testCartUIElements"/>
                    <include name="testCartPerformance"/>
                    <include name="testCartProductDetailsIntegration"/>
                </methods>
            </class>

            <!-- Comprehensive Checkout Tests -->
            <class name="com.swaglabs.tests.CheckoutTest">
                <methods>
                    <include name="testCheckoutValidationEmptyForm"/>
                    <include name="testCheckoutValidationFirstNameOnly"/>
                    <include name="testCheckoutValidationMissingPostalCode"/>
                    <include name="testCheckoutValidationInvalidData"/>
                    <include name="testSuccessfulCheckout"/>
                    <include name="testCheckoutCancellationAtInformation"/>
                    <include name="testCheckoutCancellationAtOverview"/>
                    <include name="testCompleteE2ECheckoutFlow"/>
                    <include name="testCheckoutPriceCalculations"/>
                    <include name="testCheckoutUIElements"/>
                    <include name="testCheckoutPerformance"/>
                    <include name="testCheckoutEdgeCases"/>
                </methods>
            </class>

            <!-- Extended Products Tests -->
            <class name="com.swaglabs.tests.ProductsTest">
                <methods>
                    <include name="testProductDetailsNavigation"/>
                    <include name="testMultipleProductsAddToCart"/>
                    <include name="testProductsPageUIElements"/>
                    <include name="testProductsPagePerformance"/>
                    <include name="testProductsPageAccessibility"/>
                </methods>
            </class>

            <!-- Extended Login Tests -->
            <class name="com.swaglabs.tests.LoginTest">
                <methods>
                    <include name="testLoginBoundaryValues"/>
                    <include name="testMultipleLoginAttempts"/>
                    <include name="testPostLoginNavigation"/>
                </methods>
            </class>

            <!-- Session Management Tests -->
            <class name="com.swaglabs.tests.LogoutTest">
                <methods>
                    <include name="testLogoutClearsSessionData"/>
                    <include name="testLogoutForDifferentUsers"/>
                    <include name="testLogoutFromDifferentPages"/>
                    <include name="testLogoutSecurity"/>
                    <include name="testLogoutWorkflowIntegration"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>