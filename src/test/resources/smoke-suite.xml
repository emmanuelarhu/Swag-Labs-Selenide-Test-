<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SwagLabs-Smoke-Test-Suite" verbose="1" parallel="false" thread-count="1">

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <!-- Smoke Test Suite - Critical Path Validation -->
    <test name="Smoke-Tests-Login-And-Products" preserve-order="true">
        <parameter name="testType" value="smoke"/>
        <groups>
            <run>
                <include name="smoke"/>
                <include name="critical"/>
            </run>
        </groups>
        <classes>
            <!-- Login Tests - Critical Authentication -->
            <class name="com.swaglabs.tests.LoginTest">
                <methods>
                    <include name="testValidLogin"/>
                    <include name="testInvalidLogin"/>
                    <include name="testLoginPageElements"/>
                </methods>
            </class>

            <!-- Products Tests - Core Functionality -->
            <class name="com.swaglabs.tests.ProductsTest">
                <methods>
                    <include name="testProductsPageDisplay"/>
                    <include name="testIndividualProductValidation"/>
                    <include name="testProductSorting"/>
                </methods>
            </class>

            <!-- Basic Cart Operations -->
            <class name="com.swaglabs.tests.CartTest">
                <methods>
                    <include name="testBasicCartOperations"/>
                    <include name="testCartProductDetailsIntegration"/>
                </methods>
            </class>

            <!-- Basic Logout -->
            <class name="com.swaglabs.tests.LogoutTest">
                <methods>
                    <include name="testBasicLogout"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>